{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["es2017", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": false,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "paths": {
      "@founders-day/shared-types": ["./shared-types/src"],
      "@founders-day/test-utils": ["./packages/test-utils/src"],
      "@step-definitions/*": ["./features/step-definitions/*"],
      "@support/*": ["./features/support/*"]
    },
    "baseUrl": "."
  },
  "include": [
    "features/**/*.ts",
    "shared-types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/node_modules"
  ]
}