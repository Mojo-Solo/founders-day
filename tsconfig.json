{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["es2017", "dom", "es6"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"],
      "@founders-day/shared-types": ["./packages/shared-types/src"],
      "@founders-day/test-utils": ["./packages/test-utils/src"],
      "@step-definitions/*": ["./features/step-definitions/*"],
      "@support/*": ["./features/support/*"]
    },
    "baseUrl": ".",
    "types": ["node", "react", "react-dom", "vitest/globals"]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "features/**/*.ts",
    "shared-types/**/*.ts",
    "test/**/*.ts",
    "test/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "**/node_modules"
  ]
}