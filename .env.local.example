# Square Payment Configuration (Sandbox)
# Get these values from your Square Sandbox Dashboard:
# https://developer.squareup.com/apps

# Square Sandbox Application ID
NEXT_PUBLIC_SQUARE_APPLICATION_ID=sandbox-sq0idb-XXXXXXXXXXXXXXXXXXXXXX

# Square Sandbox Location ID
NEXT_PUBLIC_SQUARE_LOCATION_ID=LXXXXXXXXXXXXXX

# Square Sandbox Access Token (Keep this secret!)
SQUARE_ACCESS_TOKEN=EAAAECwXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX

# Square Environment (sandbox or production)
NEXT_PUBLIC_SQUARE_ENVIRONMENT=sandbox

# Preferred Payment Provider (square or stripe)
NEXT_PUBLIC_PREFERRED_PAYMENT_PROVIDER=square

# Admin Backend API URL
# For local development, this points to your local admin backend
# In production, this should point to your deployed admin backend
NEXT_PUBLIC_ADMIN_API_URL=http://localhost:3001

# Admin API Key for server-to-server authentication
# This key bypasses Vercel SSO for the proxy endpoint
# Get this from the admin team or generate in admin dashboard
ADMIN_API_KEY=your-secure-api-key-here

# Pricing Configuration (hardcoded as requested)
NEXT_PUBLIC_EARLY_BIRD_PRICE=25
NEXT_PUBLIC_DOOR_PRICE=30
NEXT_PUBLIC_BANQUET_PRICE=60
NEXT_PUBLIC_HOTEL_PRICE=126

# Optional: Stripe Configuration (if you want to test both)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_XXXXXXXXXXXXXXXXXXXXXXXXXX
STRIPE_SECRET_KEY=sk_test_XXXXXXXXXXXXXXXXXXXXXXXXXX
STRIPE_WEBHOOK_SECRET=whsec_XXXXXXXXXXXXXXXXXXXXXXXXXX