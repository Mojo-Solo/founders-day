{
  "name": "@founders-day/monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*",
    "founders-day-frontend",
    "founders-day-admin"
  ],
  "scripts": {
    "typecheck": "npm run typecheck --workspaces",
    "test:cucumber": "cucumber-js",
    "test:cucumber:watch": "cucumber-js --watch",
    "test:cucumber:smoke": "cucumber-js --profile smoke",
    "test:cucumber:parallel": "cucumber-js --profile parallel",
    "test:cucumber:sequential": "cucumber-js --profile sequential",
    "test:cucumber:ci": "cucumber-js --profile ci",
    "test:cucumber:fast": "cucumber-js --config cucumber.fast.js",
    "test:cucumber:fast:smoke": "cucumber-js --config cucumber.fast.js --profile smoke",
    "test:cucumber:benchmark": "cucumber-js --config cucumber.fast.js --profile benchmark",
    "test:cucumber:report": "cucumber-js --format html:reports/cucumber-report.html",
    "test:all": "npm run test:cucumber:smoke && npm run test:cucumber:parallel",
    "test:fast": "npm run test:cucumber:fast",
    "test:performance": "npm run test:cucumber:benchmark",
    "report:merge": "cucumber-merge-reports reports/*.json -o reports/merged-report.json",
    "report:generate": "cucumber-html-formatter -i reports/merged-report.json -o reports/final-report.html"
  },
  "devDependencies": {
    "@cucumber/cucumber": "^9.5.1",
    "@cucumber/pretty-formatter": "^2.0.1",
    "@playwright/test": "^1.40.0",
    "@supabase/supabase-js": "^2.52.1",
    "@types/chai": "^5.2.2",
    "@types/node": "^20.10.0",
    "axios": "^1.11.0",
    "chai": "^5.2.1",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "eslint": "^8.55.0",
    "husky": "^8.0.3",
    "msw": "^2.10.4",
    "playwright": "^1.40.0",
    "prettier": "^3.1.0",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}