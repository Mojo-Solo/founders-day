# Monitoring Configuration Template
# Copy to .env.local and fill in your actual values

# Sentry Error Tracking
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ORG=your-sentry-org
SENTRY_PROJECT=your-sentry-project

# New Relic APM
NEW_RELIC_LICENSE_KEY=your-new-relic-license-key  
NEW_RELIC_APP_NAME="Founders Day Frontend"

# Monitoring Configuration
NEXT_PUBLIC_ENABLE_MONITORING=true
NEXT_PUBLIC_MONITORING_SAMPLE_RATE=0.1
NEXT_PUBLIC_PERFORMANCE_MONITORING=true

# Development Tools
NEXT_PUBLIC_SHOW_MONITORING_DASHBOARD=false
NEXT_PUBLIC_MONITORING_DEBUG=false

# Performance Budgets (optional overrides)
NEXT_PUBLIC_PERFORMANCE_BUDGET_LCP=2500
NEXT_PUBLIC_PERFORMANCE_BUDGET_FID=100
NEXT_PUBLIC_PERFORMANCE_BUDGET_CLS=0.1

# External Service URLs for monitoring
NEXT_PUBLIC_ADMIN_API_URL=https://your-admin-api-url
ADMIN_API_KEY=your-admin-api-key