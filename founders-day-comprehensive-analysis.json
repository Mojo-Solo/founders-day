  "architecture": {
    "structure": "Monorepo with npm workspaces",
    "applications": [
      {
        "name": "founders-day-admin",
        "type": "Next.js 15.2.4 Application",
        "port": 3001,
        "purpose": "Admin dashboard for event management",
        "features": [
          "Registration management",
          "Volunteer coordination",
          "Financial tracking",
          "Email campaigns",
          "QR code check-in",
          "Content management"
        ]
      },
      {
        "name": "founders-day-frontend",
        "type": "Next.js 15.3.3 Application",
        "port": 3000,
        "purpose": "Public-facing registration website",
        "features": [
          "Event registration",
          "Payment processing",
          "Mobile-responsive design",
          "Offline support",
          "Search functionality"
        ]
      }
    ],
    "shared_packages": [
      {
        "name": "@founders-day/shared-types",
